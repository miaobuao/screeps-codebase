{
	"name": "spawns",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"dev": "run-s dev:bundle transpile",
		"build": "run-s build:bundle transpile",
		"dev:bundle": "bun build ./index.ts --format=cjs --target=node --outfile=dist/index.js",
		"build:bundle": "bun build ./index.ts --minify --format=cjs --target=node --outfile=dist/index.js",
		"transpile": "swc ./dist/index.js -o ./dist/index.js --config-file ./swcrc.build.json"
	},
	"devDependencies": {
		"@swc/cli": "^0.5.2",
		"@swc/core": "^1.10.2",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@types/lodash-es": "^4.17.12",
		"@types/screeps": "^3.3.8",
		"lodash-es": "^4.17.21"
	}
}
